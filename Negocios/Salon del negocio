};

// Funci√≥n para cargar horarios desde Google Sheets
async function cargarHorariosRemotos() {
    try {
        const response = await fetch(URL_SHEET_HORARIOS);
        const data = await response.json();
        
        // Limpiar lista visual
        listaHorariosUL.innerHTML = '';
        horariosActivos = {}; // Reiniciar objeto l√≥gico

        // Se asume que el sheet devuelve un array de objetos o un objeto {horarios: [...]}
        let listaDatos = Array.isArray(data) ? data : (data.horarios || []);

        listaDatos.forEach(item => {
            // 1. Obtener nombre del d√≠a y limpiarlo
            const diaRaw = item.dia || "";
            const diaIndex = mapDias[diaRaw.toLowerCase().trim()];
            
            let textoVisual = "";
            let rangosLogicos = []; // Aqu√≠ guardamos [9,0,13,0]
            let partesTexto = [];

            // 2. Revisar si est√° cerrado manualmente
            if (item.cerrado === true || String(item.cerrado).toUpperCase() === "SI" || String(item.cerrado).toUpperCase() === "TRUE") {
                textoVisual = `<span style="color:var(--rojo-cerrado); font-weight:bold;">Cerrado</span>`;
                
                // --- CORRECCI√ìN AQU√ç PARA EL MOTIVO ---
                const motivo = item.motivo ? String(item.motivo).trim() : "";
                if(motivo.length > 0) {
                     // Lo ponemos en un div con margen superior para que baje de rengl√≥n
                     textoVisual += `<div style="font-size: 0.85rem; color: #E53935; font-style: italic; margin-top:4px;">(${motivo})</div>`;
                }
                // -------------------------------------

            } else {
                // 3. Procesar turno ma√±ana (m_inicio - m_fin)
                if (item.m_inicio && item.m_fin && item.m_inicio.toString() !== "") {
                    partesTexto.push(`${item.m_inicio} - ${item.m_fin}`);
                    rangosLogicos.push([...parsearHora(item.m_inicio), ...parsearHora(item.m_fin)]);
                }
                
                // 4. Procesar turno tarde (t_inicio - t_fin)
                if (item.t_inicio && item.t_fin && item.t_inicio.toString() !== "") {
                    partesTexto.push(`${item.t_inicio} - ${item.t_fin}`);
                    rangosLogicos.push([...parsearHora(item.t_inicio), ...parsearHora(item.t_fin)]);
                }

                // Unir los textos
                if (partesTexto.length > 0) {
                    textoVisual = partesTexto.join(' y ');
                } else {
                    textoVisual = "Cerrado";
                }
            }

            // 5. Renderizar en HTML
            const li = document.createElement('li');
            li.setAttribute('data-dia', diaIndex);
            
            // Marcar el d√≠a de hoy
            const hoyIndex = new Date().getDay();
            if(diaIndex === hoyIndex) li.classList.add('dia-actual');

            li.innerHTML = `<span>${diaRaw}</span> <span>${textoVisual}</span>`;
            listaHorariosUL.appendChild(li);

            // 6. Guardar en memoria para el sem√°foro
            // Solo guardamos si NO est√° cerrado y tenemos rangos
            const cerradoBooleano = (item.cerrado === true || String(item.cerrado).toUpperCase() === "SI" || String(item.cerrado).toUpperCase() === "TRUE");

            if (diaIndex !== undefined && !cerradoBooleano && rangosLogicos.length > 0) {
                horariosActivos[diaIndex] = rangosLogicos;
            }
        });

        // Una vez cargados, verificamos si est√° abierto ahora
        verificarEstadoNegocio();

    } catch (error) {
        console.error("Error cargando horarios:", error);
        listaHorariosUL.innerHTML = '<li style="color:red">Error cargando horarios.</li>';
        horariosActivos = {};
        verificarEstadoNegocio();
    }
}

function verificarEstadoNegocio() {
    const ahora = new Date();
    const diaSemana = ahora.getDay(); 
    const horaActual = ahora.getHours();
    const minActual = ahora.getMinutes();
    const tiempoActual = horaActual * 60 + minActual; // Minutos totales desde las 00:00

    // Usamos los horarios cargados din√°micamente
    const rangosHoy = horariosActivos[diaSemana];
    let estaAbierto = false;

    if (rangosHoy && rangosHoy.length > 0) {
        // rangosHoy es un array de arrays: [[9,0,13,0], [17,0,21,0]]
        for (let rango of rangosHoy) {
            // rango formato: [horaInicio, minInicio, horaFin, minFin]
            const inicio = rango[0] * 60 + rango[1];
            const fin = rango[2] * 60 + rango[3];
            
            if (tiempoActual >= inicio && tiempoActual < fin) {
                estaAbierto = true;
                break;
            }
        }
    }
    
    negocioAbierto = estaAbierto;
    actualizarInterfazSegunEstado();
}

function actualizarInterfazSegunEstado() {
    if (negocioAbierto) {
        indicadorEstado.textContent = "üü¢ Abierto";
        indicadorEstado.classList.remove('cerrado');
        btnVerCarrito.disabled = false;
        btnVerCarrito.classList.remove('deshabilitado');
        btnVerCarrito.title = "Ver Carrito";
    } else {
        indicadorEstado.textContent = "üî¥ Cerrado";
        indicadorEstado.classList.add('cerrado');
        btnVerCarrito.disabled = true;
        btnVerCarrito.classList.add('deshabilitado');
        btnVerCarrito.title = "Cerrado - No se pueden realizar pedidos.";
        
        // Opcional: Cerrar carrito si est√° abierto
        if (modal.classList.contains('visible')) {
             // modal.classList.remove('visible'); // Descomentar si quieres que cierre el modal
             showToast("El negocio ha cerrado.");
        }
    }
    actualizarBotonesProductos();
}

function actualizarBotonesProductos() {
    const botonesAgregar = document.querySelectorAll('.btn-agregar');
    botonesAgregar.forEach(btn => {
        if(btn.closest('#modal-horarios')) return;
        if (!negocioAbierto) {
            btn.disabled = true;
            btn.textContent = "Cerrado";
        } else {
            const idProd = btn.getAttribute('data-id');
            const prod = productos.find(p => p.id == idProd);
            if (prod) {
                if (prod.stock > 0) {
                    btn.disabled = false;
                    btn.textContent = "üõí Agregar";
                } else {
                    btn.disabled = true;
                    btn.textContent = "Sin Stock";
                }
            }
        }
    });
}

// --- Carga de Productos ---
async function cargarProductosRemotos() {
    loading.style.display = 'block';
    errorMsg.style.display = 'none';
    try {
        const resp = await fetch(URL_SHEET_PRODUCTS);
        if (!resp.ok) throw new Error('HTTP error ' + resp.status);
        const data = await resp.json();
        
        if (data && data.ok && Array.isArray(data.productos)) {
            productos = data.productos.map(p => ({
                id: Number(p.id) || Date.now() + Math.random(),
                nombre: String(p.nombre || 'Sin nombre'),
                precio: Number(p.precio) || 0,
                categoria: String(p.categoria || 'otros').toLowerCase().trim(),
                img: (p.img && p.img.startsWith('http')) ? p.img : '',
                stock: p.stock != null ? Number(p.stock) : 9999,
                promocion: !!p.promocion
            }));
            if (!productos.length) throw new Error('No trajo productos.');
        } else throw new Error('Respuesta inv√°lida.');
    } catch(e) {
        console.error(e);
        errorMsg.style.display = 'block';
        productos = localProductos; 
    } finally {
        loading.style.display = 'none';
        generarCategorias();
        filtrarPorCategoria('todos');
        // Actualizamos estado (se intentar√° de nuevo tras cargar horarios)
        actualizarBotonesProductos(); 
    }
}

function generarCategorias() {
    const categorias = new Set(productos.map(p => p.categoria));
    categoriasLista.innerHTML = `<li><a href="#" data-categoria="todos" class="activo">Todos los Productos</a></li>`;
    if (productos.some(p => p.promocion)) categoriasLista.innerHTML += `<li><a href="#" data-categoria="promocion">üî• Promociones</a></li>`;
    categorias.forEach(cat => {
        if (!['promocion','todos',''].includes(cat)) categoriasLista.innerHTML += `<li><a href="#" data-categoria="${cat}">${cat.charAt(0).toUpperCase()+cat.slice(1)}</a></li>`;
    });

    categoriasLista.querySelectorAll('a').forEach(a => {
        a.addEventListener('click', e => {
            e.preventDefault();
            categoriasLista.querySelectorAll('a').forEach(x => x.classList.remove('activo'));
            a.classList.add('activo');
            filtrarPorCategoria(a.dataset.categoria);
        });
    });
}

function renderizarProductos(productosFiltrados) {
    productosContainer.innerHTML = '';
    if (!productosFiltrados.length) {
        productosContainer.innerHTML = '<p style="padding: 20px; text-align:center; width:100%;">No hay productos disponibles.</p>';
        return;
    }
    
    productosFiltrados.forEach(producto => {
        const card = document.createElement('div');
        // Clase condicional si no tiene imagen para ajustar el dise√±o
        const claseImagen = producto.img ? '' : 'sin-imagen';
        card.className = `producto-card ${claseImagen}`;
        
        let htmlImagen = '';
        if(producto.img) {
            htmlImagen = `<img src="${producto.img}" alt="${producto.nombre}" loading="lazy">`;
        }

        card.innerHTML = `
            ${producto.promocion ? '<div class="cinta-oferta">OFERTA</div>' : ''}
            ${htmlImagen}
            <h3>${producto.nombre}</h3>
            <span class="precio">${formatPrice(producto.precio)}</span>
            <button class="btn-agregar" data-id="${producto.id}" disabled>
                Cargando...
            </button>
        `;
        productosContainer.appendChild(card);
    });

    actualizarBotonesProductos();

    document.querySelectorAll('.btn-agregar').forEach(btn => {
        btn.addEventListener('click', () => {
            if(btn.closest('#modal-horarios')) return;
            if (!negocioAbierto) {
                showToast("El negocio est√° cerrado.");
                return;
            }
            const prod = productos.find(p => p.id == btn.dataset.id);
            agregarAlCarrito(prod);
        });
    });
}

function filtrarPorCategoria(categoria) {
    if(categoria==='todos') renderizarProductos(productos);
    else if(categoria==='promocion') renderizarProductos(productos.filter(p=>p.promocion));
    else renderizarProductos(productos.filter(p=>p.categoria===categoria));
}

function agregarAlCarrito(prod) {
    const existe = carrito.find(p => p.id === prod.id);
    if(existe){
        if(existe.cantidad<prod.stock) { existe.cantidad++; showToast(`+1 ${prod.nombre}`); }
        else showToast(`Sin stock extra de ${prod.nombre}`);
    } else {
        carrito.push({ ...prod, cantidad:1 });
        showToast(`${prod.nombre} agregado`);
    }
    actualizarCarritoUI();
}

function actualizarCarritoUI() {
    modalCarritoItemsContainer.innerHTML = '';
    let total = 0;
    
    if(carrito.length === 0) {
        modalCarritoItemsContainer.innerHTML = '<p style="text-align:center; color:#999;">El carrito est√° vac√≠o.</p>';
    }

    carrito.forEach(item => {
        total += item.precio * item.cantidad;
        const div = document.createElement('div');
        div.className = 'modal-carrito-item';
        div.innerHTML = `
            <span style="flex:1;">${item.nombre}</span>
            <div class="controles-cantidad">
                <button class="btn-cantidad" data-id="${item.id}" data-accion="-">-</button>
                <span>${item.cantidad}</span>
                <button class="btn-cantidad" data-id="${item.id}" data-accion="+">+</button>
            </div>
            <span style="width:80px; text-align:right;">${formatPrice(item.precio * item.cantidad)}</span>
        `;
        modalCarritoItemsContainer.appendChild(div);
    });
    totalHeader.textContent = formatPrice(total);
    modalTotal.textContent = formatPrice(total);

    modalCarritoItemsContainer.querySelectorAll('.btn-cantidad').forEach(btn => {
        btn.addEventListener('click', () => {
            const item = carrito.find(p => p.id == btn.dataset.id);
            if(btn.dataset.accion==='+') {
                if(item.cantidad<item.stock) item.cantidad++;
            } else {
                item.cantidad--;
                if(item.cantidad===0) carrito = carrito.filter(p=>p.id!==item.id);
            }
            actualizarCarritoUI();
        });
    });
}

// Inicializar
cargarProductosRemotos();
cargarHorariosRemotos();
// Recargar estado cada minuto
setInterval(verificarEstadoNegocio, 60000);

// Enviar pedido WhatsApp
btnEnviarPedido.addEventListener('click', (e) => {
    e.preventDefault();
    if(carrito.length === 0) { showToast("El carrito est√° vac√≠o"); return; }
    
    const nombre = document.getElementById('nombre').value;
    const celular = document.getElementById('celular').value; // No usado en enlace pero √∫til para registro
    if(!nombre || !celular) { showToast("Completa tus datos"); return; }

    let mensaje = `Hola! Soy *${nombre}*. Quiero pedir:\n\n`;
    let total = 0;
    carrito.forEach(p => {
        mensaje += `‚ñ™ ${p.cantidad} x ${p.nombre} ($${p.precio*p.cantidad})\n`;
        total += p.precio * p.cantidad;
    });
    mensaje += `\n*TOTAL: $${total}*`;
    
    const link = `https://wa.me/${WHATSAPP_NUMBER}?text=${encodeURIComponent(mensaje)}`;
    window.open(link, '_blank');
});

});
</script>
